<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:text="教材编号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upbookid"
        android:hint="请输入教材编号"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="教材名称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upbookname"
        android:hint="请输入教材名称"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="教材类型"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/upbooktype"
        android:entries="@array/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:text="教材分区"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/upbookarea"
        android:entries="@array/area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:text="教材库存"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upbookcount"
        android:hint="请输入教材库存"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="教材出版社"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upbookpublish"
        android:hint="请输入教材出版社"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="教材使用专业"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upbookdiscipline"
        android:hint="请输入教材使用专业"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="教材使用年级"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/upbookgrade"
        android:entries="@array/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Spinner>

    <Button
        android:id="@+id/confirmup"
        android:text="更新"
        android:layout_marginLeft="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/cancelup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="-48dp"
        android:text="撤销" />

    <TextView
        android:id="@+id/dcsz"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="75dp"
        android:text="The app was created by Dick Chen and Stone Zhang"
        android:textSize="@dimen/eins_size"></TextView>

</LinearLayout>