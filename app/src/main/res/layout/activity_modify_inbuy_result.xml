<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:text="订购编号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upinbuyid"
        android:hint="请输入订购编号"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="教材名称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upinbuyname"
        android:hint="请输入教材名称"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="教材单价"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upinbuyprice"
        android:hint="请输入教材单价"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="订购日期"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upinbuytime"
        android:hint="请输入订购日期"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="订购数量"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upinbuycount"
        android:hint="请输入订购数量"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/confirmup"
        android:text="更新"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="175dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/cancelup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="-48dp"
        android:text="撤销" />

    <TextView
        android:id="@+id/dcsz"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="25dp"
        android:text="The app was created by Dick Chen and Stone Zhang"
        android:textSize="@dimen/eins_size"></TextView>

</LinearLayout>